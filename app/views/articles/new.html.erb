<h1>Create New Article</h1>

<%= render 'errors' %>

<%= form_with scope: :articles, url: articles_path, data: {turbo: false} ,local: true do |f| %>

    <p>
        <%= f.label :title%> <br>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%> <br>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit %>
    </p>

<%end%>

<%= link_to "Return to all Articles", articles_path %>