<h1>Edit Article</h1>

<%= render 'errors' %>

<%= form_with(model: @article, local: true, data: {turbo: false}) do |f| %>
<%# data: {turbo: false} %>

    <p>
        <%= f.label :title%> <br>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%> <br>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit %>
    </p>

<%end %>

<%= link_to "Cancle & return to all Articles", articles_path %>
